<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edge_gray_bottom"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="15dp"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/wrapLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/teamInfo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="@dimen/current_matching_team_item_margin_right"
            android:layout_marginBottom="7dp"
            android:text="술잘마시는사람만"
            android:textColor="@color/tingtingMain"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teamTag3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="#신촌 #소맥 #술게임 #21살" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/img_m3First"
                android:layout_width="@dimen/current_matching_team_item_width"
                android:layout_height="@dimen/current_matching_team_item_width"
                android:src="@drawable/iu2" />

            <ImageView
                android:id="@+id/img_m3Sec"
                android:layout_width="@dimen/current_matching_team_item_width"
                android:layout_height="@dimen/current_matching_team_item_width"
                android:layout_gravity="top"
                android:layout_marginLeft="25dp"
                android:src="@drawable/iu" />

            <ImageView
                android:id="@+id/img_m3Third"
                android:layout_width="@dimen/current_matching_team_item_width"
                android:layout_height="@dimen/current_matching_team_item_width"
                android:layout_marginLeft="50dp"
                android:src="@drawable/seulgi" />

        </FrameLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center_vertical|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next" />
</FrameLayout>