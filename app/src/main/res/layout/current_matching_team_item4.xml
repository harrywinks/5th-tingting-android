<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edge_gray_bottom"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="15dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/wrapLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/teamRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="7dp"
                android:text="서울"
                android:textColor="@color/darkGray"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/teamRegion"
                android:textColor="@color/darkGray"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/teamInfo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toRightOf="@+id/slash"
                android:layout_marginBottom="7dp"
                android:text="술잘마시는사람만"
                android:textColor="@color/tingtingMain"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/lock"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/teamInfo4"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/lock"/>
        </RelativeLayout>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_m4First"
                    android:layout_width="@dimen/current_matching_team_item_width"
                    android:layout_height="@dimen/current_matching_team_item_width"
                    android:src="@drawable/iu2" />

                <ImageView
                    android:id="@+id/img_m4Sec"
                    android:layout_width="@dimen/current_matching_team_item_width"
                    android:layout_height="@dimen/current_matching_team_item_width"
                    android:layout_gravity="top"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/iu" />

                <ImageView
                    android:id="@+id/img_m4Third"
                    android:layout_width="@dimen/current_matching_team_item_width"
                    android:layout_height="@dimen/current_matching_team_item_width"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/seulgi" />

                <ImageView
                    android:id="@+id/img_m4Fourth"
                    android:layout_width="@dimen/current_matching_team_item_width"
                    android:layout_height="@dimen/current_matching_team_item_width"
                    android:layout_marginLeft="75dp"
                    android:src="@drawable/iu3" />
            </FrameLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/ArrowToDetail"
        android:layout_gravity="center_vertical|right"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/next" />
</FrameLayout>