<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="50dp"
    android:background="@drawable/rounded_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="태그"
        android:textColor="@color/subtext"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/subtext" />

    <LinearLayout
        android:id="@+id/tagRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="1"
                android:text="#술고래"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="2"
                android:text="#술찌"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="3"
                android:text="#술게임선호"
                android:textColor="@color/tingtingMain" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="4"
                android:text="#활발한"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="5"
                android:text="#재밌는"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="6"
                android:text="#새내긔"
                android:textColor="@color/tingtingMain" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="7"
                android:text="#정든내기"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="8"
                android:text="#털털한"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="9"
                android:text="#착한"
                android:textColor="@color/tingtingMain" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="10"
                android:text="#귀여운"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="11"
                android:text="#예쁜"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="12"
                android:text="#잘생긴"
                android:textColor="@color/tingtingMain" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="13"
                android:text="#긍정적"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="14"
                android:text="#엉뚱한"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="15"
                android:text="#도른자"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="16"
                android:text="#새내긔"
                android:textColor="@color/tingtingMain" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="17"
                android:text="#정든내기"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="18"
                android:text="#첫미팅"
                android:textColor="@color/tingtingMain" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/round_edge_pink_nofill"
                android:onClick="tagOnClick"
                android:tag="19"
                android:text="#당일미팅"
                android:textColor="@color/tingtingMain" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="최소 2개 최대 5개"
            android:textColor="@color/subtext"
            android:textSize="10dp" />

        <Button
            android:id="@+id/dialogOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_edge_pink"
            android:text="추가하기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>